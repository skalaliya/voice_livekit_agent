# ================================
# CORE LLM CONFIGURATION (Required)
# ================================
# Using local Ollama for LLM
OPENAI_BASE_URL=http://127.0.0.1:11434/v1
OPENAI_API_KEY=ollama
LLM_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.7

# ================================
# TESTING & STARTUP
# ================================
# Start in smoke test mode (LLM only, no audio)
BASIC_TEST=true
WARMUP_LLM=true
WARMUP_TIMEOUT=60

# ================================
# VOICE MODE (flip BASIC_TEST=false)
# ================================
# Speech-to-Text (Deepgram)
# DEEPGRAM_API_KEY=your_deepgram_key
# DEEPGRAM_MODEL=nova-2

# Text-to-Speech (OpenAI)
# OPENAI_TTS_API_KEY=your_openai_tts_key
# OPENAI_TTS_BASE_URL=https://api.openai.com/v1
# TTS_VOICE=alloy

# ================================
# AGENT FEATURES
# ================================
# Enable function tools (recommended for robust agents)
USE_TOOLS=true

# Conversation memory
ENABLE_MEMORY=true
MEMORY_FILE=agent_memory.json
MAX_CONTEXT_TURNS=10

# Advanced features
ENABLE_WEB_SEARCH=false
ENABLE_CODE_EXEC=false

# ================================
# OPTIONAL API KEYS
# ================================
# Weather data (free tier: https://openweathermap.org/api)
# OPENWEATHER_API_KEY=your_openweather_key

# News articles (free tier: https://newsapi.org/)
# NEWS_API_KEY=your_news_api_key

# Web search (free tier: https://serpapi.com/)
# SERPAPI_KEY=your_serpapi_key

# ================================
# FRENCH TUTOR SPECIFIC (optional)
# ================================
# Spaced repetition system
SRS_EXPORT_DIR=~/.french_tutor/exports
SRS_AUTO_EXPORT=true
SRS_EXPORT_FORMAT=csv
SRS_STATE_FILE=french_progress_plus.json
